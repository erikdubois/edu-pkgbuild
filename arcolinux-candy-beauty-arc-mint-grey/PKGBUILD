# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=arcolinux-candy-beauty-arc-mint-grey-git
_pkgname=arcolinux-candy-beauty-arc-mint-grey
pkgver=22.02
pkgrel=05
_destname1="/usr/share/icons/arcolinux-candy-beauty-arc-mint-grey"
_destname2="/usr/share/plasma/arcolinux-candy-beauty-arc-mint-grey"
pkgdesc="Beautyline icons completed for ArcoLinux + Candy icons + mint icons"
arch=('any')
url="https://github.com/erikdubois/${_pkgname}.git"
license=('GPL3')
depends=('arcolinux-candy-beauty-git')
makedepends=('git')
provides=("${pkgname}")
conflicts=()
options=(!strip !emptydirs)
source=(${_pkgname}::"git+${url}")
sha256sums=('SKIP')
package() {
	install -dm 755 ${pkgdir}${_destname1}
	install -dm 755 ${pkgdir}${_destname2}
	rm ${srcdir}/${_pkgname}/git*
	rm ${srcdir}/${_pkgname}/setup*
    cp -r ${srcdir}/${_pkgname}/arcolinux-candy-beauty-arc-mint-grey/* ${pkgdir}${_destname1}
	cp -r ${srcdir}/${_pkgname}/arcolinux-candy-beauty-arc-mint-grey/* ${pkgdir}${_destname2}
}
